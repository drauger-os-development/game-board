#define how to launch game-board
EXECUTE () {
	/usr/share/game-board/engine/game-pad/read_in.py | /usr/share/game-board/ui/main.py
}

#set version number
VERSION="0.0.1-alpha1"

#work on what the user wants
if [ "$1" == "-v" ] || [ "$1" == "--version" ]; then
	#print version number
	echo -e "\ngame-board version $VERSION\n"
	exit 0
elif [ "$1" == "-h" ] || [ "$1" == "--help" ]; then
	#print help dialog
	echo -e "\ngame-board version $VERSION\n\ngame-board is an on-screen keyboard interface\nfor Xbox and PlayStation controllers.\n\ngame-board uses the direction the analoge sticks are pointing\nin order to figure out which letter, number, or special character you want\nthen inputs it when the correct button is pressed\n\n-b, --background\t Start game-board in the background\n-h, --help\t Print this Help Message and Exit\n--hidden\t Run game-board in the background\n-I, --Interface\t Show the graphical interface\n-v, --version\t Print Version and Exit\n"
	exit 0
elif [ "$1" == "-I" ] || [ "$1" == "--Interface" ] || [ "$1" == "--interface" ]; then
	#run the app, showing the GUI
	EXECUTE
elif [ "$1" == "--hidden" ]; then
	#run the app in hidden mode
	echo -e "\nERROR: THIS FEATURE DOES NOT EXIST YET.\n"
	exit 2
fi
